<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.FiltersFragment"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/filter_text1"
                    android:text="Gluten-free            " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/filter_text2"
                    android:text="Only include gluten-free meals"/>
            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchGluten"
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="48dp"
                android:layout_weight="1"
                android:scaleX="1.4"
                android:scaleY="1.4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_weight="1"

                android:layout_marginBottom="8dp"
                android:layout_marginStart="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/filter_text1"
                    android:text="Lactose-free         " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/filter_text2"
                    android:text="Only include lactose-free meals"/>
            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchLactose"
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="48dp"
                android:layout_weight="1"
                android:scaleX="1.4"
                android:scaleY="1.4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_weight="1"

                android:layout_marginBottom="8dp"
                android:layout_marginStart="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/filter_text1"
                    android:text="Vegetarian             " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/filter_text2"
                    android:text="Only include vegetarian meals"/>
            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchVegetarian"
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="48dp"
                android:layout_weight="1"
                android:scaleX="1.4"
                android:scaleY="1.4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"

            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="32dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/filter_text1"
                    android:text="Vegan                    " />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/filter_text2"
                    android:text="Only include vegan meals"/>
            </LinearLayout>

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchVegan"
                android:layout_width="wrap_content"
                android:layout_height="78dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="48dp"
                android:scaleX="1.4"
                android:scaleY="1.4" />
        </LinearLayout>



    </LinearLayout>

</layout>